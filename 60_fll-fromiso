# override tool behaviour through /etc/default/grub2-fll-fromiso
FLL_GRUB2_ISO_LOCATION="/var/cache/pyfll"
FLL_GRUB2_ISO_PREFIX="sidux- fullstory-"
FLL_GRUB2_LANG="de_DE"
FLL_GRUB2_TZ="Europe/Berlin"
FLL_GRUB2_VGA="794"
FLL_GRUB2_CHEATCODE="quiet noeject screen=1400x1050 xrate=100"

# source overrides
[ -r /etc/default/grub2-fll-fromiso ] && . /etc/default/grub2-fll-fromiso

# find ISO
FROMISO="${FLL_GRUB2_ISO_LOCATION}/sidux-snapshot-kde-full-i386-amd64-200908230118.iso"

# assemble cmdline
CMDLINE="boot=fll vga=${FLL_GRUB2_VGA} lang=${FLL_GRUB2_LANG} TZ=${FLL_GRUB2_TZ} ${FLL_GRUB2_CHEATCODE} fromiso=${FROMISO}"
